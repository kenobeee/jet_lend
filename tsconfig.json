{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "paths": {
      "utils": [
        "utils"
      ],
      "utils/*": [
        "utils/*"
      ],
      "components": [
        "components"
      ],
      "components/*": [
        "components/*"
      ],
    },
    "allowJs": true,
    "sourceMap": true,

    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,

    "moduleResolution": "node",
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "declaration": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2019",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}